{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],

    "paths": {
      "@/*": ["./src/*"],
      "@public/*": ["./public/*"],
    },

    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next",
      },
    ],
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx",
    "next.config.mjs",
  ],
  "exclude": ["node_modules"],
}
